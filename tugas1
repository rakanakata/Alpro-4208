#include <iostream>
/*
Raka Daffa Nakata
A11.2022.14323
TUGAS 1
Penjumlahan 2 bill
*/

using namespace std;

int tambah(int a, int b){
return a + b;
}

int main()
{
    int x,y;
    cout << "Masukkan Bilangan Pertama : ";
    cin >> x;
    cout << "Masukkan Bilangan Kedua : ";
    cin >> y;
    cout << "Hasil : " << tambah(x,y) << endl;
    return 0;
}


#include <iostream>
/*
Raka Daffa Nakata
A11.2022.14323
TUGAS 1
Pengurangan 2 bill
*/

using namespace std;

int kurang(int a, int b){
return a - b;
}

int main()
{
    int x,y;
    cout << "Masukkan Bilangan Pertama : ";
    cin >> x;
    cout << "Masukkan Bilangan Kedua : ";
    cin >> y;
    cout << "Hasil : " << kurang(x,y) << endl;
    return 0;
}


#include <iostream>
/*
Raka Daffa Nakata
A11.2022.14323
TUGAS 1
Total & rata-rata element dalam array
*/

using namespace std;

int main()
{
    int input[100], jmlArray, i, total, rataRata;

    cout << "Masukkan Jumlah Element Array : ";
    cin >> jmlArray;
    cout << endl;

    cout << "Masukkan " << "Angka : ";
    cout << endl;

    total = 0;
    for(i=0;i<jmlArray;i++){
        cout << "Angka ke-" << i+1 <<": ";
        cin >> input[i];
        total = total + input[i];
        rataRata = total/jmlArray;
    }
    cout << endl;

    cout << "Total Penjumlahan Dari " << jmlArray << " Angka Tersebut Adalah : " << total << endl;
    cout << "Rata-Rata : " << rataRata << endl;
    return 0;
}
